rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own data, but only server can write
    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false;
      
      // Credits ledger is strictly server-only
      match /credits_ledger/{id} {
        allow read, write: if false;
      }
    }
    
    // Landing pages - adjust based on your needs
    match /landingPages/{id} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Calls collection - adjust based on your needs
    match /calls/{id} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}